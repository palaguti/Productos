@model List<Producto>
<h1>Lista de productos</h1>
<div>

     <a asp-controller="Productos" asp-action="ReporteProductos" class="btn btn-dark">Generar PDF</a>
    <a asp-controller="Productos" asp-action="ReporteProductosExcel" class="btn btn-dark">Generar Excel Productos</a>
    <a asp-controller="Productos" asp-action="create" class="btn btn-primary">Nuevo</a>
    <br />
    <br />
<div class="card">
    <form asp-action="SubirExcelProductos" asp-controller="Productos" method="post" enctype="multipart/form-data">
        <div class="form-group">
                <label for="archivoExcel">Subir Excel</label>
                <input type="file" name="archivoExcel" required />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Subir y guardar</button>
    </form>
</div>
<br />
<br />
    @if (Model != null)
    {
        <table class=" table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Nombre</td>
                    <td>Precio</td>
                    <td>Cantidad</td>
                    <td>Fecha de creacion</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <th>@producto.Nombre</th>
                        <th>@producto.Precio</th>
                        <th>@producto.CantidadDisponible</th>
                        <th>@producto.FechaCreacion</th>
                        <th>
                            <a class="btn btn-primary" asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.Id">Editar</a>|
                            <a class="btn btn-danger" asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.Id">Eliminar</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
